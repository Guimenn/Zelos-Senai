# Configurações do Banco de Dados (EMERGÊNCIA SUPABASE)
# URL principal com configurações ultra-otimizadas para instabilidade
DATABASE_URL="postgresql://username:password@aws-0-sa-east-1.pooler.supabase.com:5432/helpdesk_db?pgbouncer=true&connection_limit=3&pool_timeout=5&connect_timeout=15&idle_timeout=30&statement_timeout=10000&query_timeout=10000"
DIRECT_URL="postgresql://username:password@aws-0-sa-east-1.pooler.supabase.com:5432/helpdesk_db?connection_limit=1&connect_timeout=10&statement_timeout=10000"

# Configurações de Performance
NODE_ENV=development
PORT=3001
WORKERS=4

# JWT
JWT_SECRET="your-super-secret-jwt-key-here-make-it-long-and-random"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Redis (para cache e rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache (EMERGÊNCIA SUPABASE)
CACHE_TTL=600
CACHE_MAX_KEYS=1000
EMERGENCY_CACHE=true

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_UPLOAD_MAX=10

# Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"
ALLOWED_FILE_TYPES="image/*,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance (EMERGÊNCIA SUPABASE)
REQUEST_TIMEOUT=15000
RESPONSE_TIMEOUT=15000
MAX_CONNECTIONS=3
MIN_CONNECTIONS=1

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Security
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Supabase (se necessário)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
